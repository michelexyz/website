---
type IntroData = { name: string } | null;
const intro = Astro.props.intro as IntroData;
---
{intro && (
  <div class="banner" aria-live="polite">
    <div class="banner__name">{intro.name}</div>
  </div>
)}

<style>
  .banner {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    opacity: 1;
    transform: translateY(0);
    max-height: 12rem;
  }

  .banner__name {
    font-size: clamp(2.4rem, 6vw, 3.75rem);
    font-weight: 700;
    letter-spacing: 0.12em;
    margin: 0;
    color: var(--text);
  }

  /* Constrain banner (title) to same width as nav (~70%) and add dashed separator */
  .banner{ inline-size: 100%; margin: 0 auto; }
  .banner{
    border-bottom: var(--border-2) dashed var(--border);
    margin-bottom: var(--space-2);
  
  }

  @media (max-width: 720px) {
    .banner__name { letter-spacing: 0.12em; }
  }
</style>
