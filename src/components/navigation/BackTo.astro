---
import '../../styles/buttons.css';
import GoBack from '../../icons/goback.svg';

interface Props {
  href: string;
  label: string; // page name, will be underlined
}

const { href, label } = Astro.props as Props;
---
<a class="btn btn--back" href={href} aria-label={`Back to ${label}`}>
  <span class="text">Back to <span class="page">{label}</span></span>
  <GoBack class="icon" aria-hidden="true" />
  
</a>

<style>
  /* Variant: dashed, blocky back button */
  .btn--back {
    border-style: dashed;
    border-color: var(--border);
    background: var(--card-bg);
    padding: 0.75rem 1rem; /* larger target */
    gap: 0.75rem; /* more space between text and icon */
    font-size: var(--font-3); /* slightly larger text */
  }
    a{
    color: var(--text);
  }
  a:visited{
    color: var(--text);
  }
  .btn--back .page { text-decoration: underline; }
  .btn--back .icon { width: var(--font-3); height: var(--font-3); }
</style>
