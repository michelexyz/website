---
const { tag, size = 'md' } = Astro.props as { tag: string; size?: 'sm' | 'md' | 'lg' };
---

<style>
  .tag {
    display: inline-block;
    background-color: var(--chip-bg);
    color: var(--chip-text);
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    margin: 0.25rem 0.25rem 0.25rem 0;
  }
  .tag:hover { background-color: var(--chip-bg-hover); color: var(--chip-text-hover); }

  /* Size variants */
  .tag--sm { font-size: 0.75rem; padding: 0.15rem 0.5rem; }
  .tag--md { font-size: 0.875rem; padding: 0.25rem 0.75rem; }
  .tag--lg { font-size: 1rem; padding: 0.35rem 0.85rem; }
</style>

<a class={`tag tag--${size}`} href={`/tags/${tag}/`}>#{tag}</a>
