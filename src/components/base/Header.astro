---
import Banner from '../Banner.astro';
import Navigation from '../navigation/Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';


type IntroLink = {
  label: string;
  url: string;
};

type IntroData = {
  name: string;
  links: IntroLink[];
} | null;

const intro = Astro.props.intro as IntroData;
const displayIntro = intro ? true : false;
const rawPath = Astro.url?.pathname ?? '/';
const normalizedPath = rawPath === '/' ? '/' : rawPath.replace(/\/+$/, '');
const primaryRoutes = new Set(['','/', '/about', '/projects', '/blog', '/tags', '/others']);
const enableViewTransition = primaryRoutes.has(normalizedPath);
const headerStyle = enableViewTransition ? 'view-transition-name: header;' : undefined;
const navRowStyle = enableViewTransition ? 'view-transition-name: nav-row;' : undefined;
---
<header class="site-header" style={headerStyle}>

  <div class="site-header__banner">
    {intro && <Banner intro={intro} />}
  </div>
  

  <div class="site-header__nav-row" style={navRowStyle}>
    <!-- logo -->
    <div class="site-header__logo">
      <a href="/" aria-label="Home">
        <img src="/logo.svg" alt="Michele Vannucci" width="48" height="48" loading="eager" />
      </a>
    </div>
    
    <nav class="site-header__nav" aria-label="Primary">
      <Navigation />
    </nav>
    <div class="theme-icon">
    <ThemeIcon  />
    </div>
  
  </div>
</header>


<style define:vars={{
  logoDisplaySmall: displayIntro ? 'none' : 'block',
  headerSeparator: displayIntro ? 'none' : 'var(--border-2) dashed var(--border)',
  headerPadding: displayIntro ? '0' : 'var(--space-4)'
}}>
  @view-transition {
      navigation: auto;
    }

  .site-header__nav-row { view-transition-name: navigator; }
  .site-header__banner { view-transition-name: banner; }
  .site-header {
    display: flex:inline;
    flex-direction: column;
    gap: 1.25rem;
    position: relative;
    border-bottom: var(--headerSeparator, none);
    padding-bottom: var(--headerPadding, 0);
    border-color: var(--border);
  }

  .site-header__nav-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .site-header__nav-row nav {
    flex: 1 1 70%;
    display: flex;
    justify-content: center;
  }


  @media (max-width: 600px) {
    .site-header__nav-row {
      justify-content: center;
      gap: 0rem;
    }
    /* When intro is displayed, hide logo on small screens */
    .site-header__logo { display: var(--logoDisplaySmall, block); }
    /* hide theme icon */
    .site-header__nav-row .theme-icon {
      display: none;
    }

    .site-header__nav-row nav {
      flex: 1 1 100%;
    }
  }
</style>
