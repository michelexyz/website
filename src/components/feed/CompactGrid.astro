---
interface Props {
  minWidth?: string; // e.g., '12rem'
  gap?: string; // e.g., '0.75rem'
  heading?: string;
  className?: string;
}

const { minWidth = '12rem', gap = '0.75rem', heading, className } = Astro.props as Props;
---
<style>
  .wrap { margin-top: 0.5rem; }
  .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(var(--minw), 1fr)); gap: var(--gap); }
  h2 { margin: 1rem 0 0.5rem; }
</style>

<div class={`wrap${className ? ' ' + className : ''}`} style={`--minw:${minWidth}; --gap:${gap};`}>
  {heading && <h2>{heading}</h2>}
  <div class="grid">
    <slot />
  </div>
</div>
