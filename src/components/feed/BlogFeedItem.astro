---
import DateText from '../../components/DateText.astro';

interface Props {
  url: string;
  title: string;
  pubDate?: Date | string;
  description?: string;
}

const { url, title, pubDate, description } = Astro.props as Props;

// date formatting handled by DateText
---
<style>
  .post { padding: 0.85rem 0; border-bottom: 1px solid var(--border); }
  .post:last-child { border-bottom: none; }
  .title { font-size: 1.05rem; font-weight: 700; }
  .meta { color: var(--text-muted); font-size: 0.85rem; margin-top: 0.125rem; }
  .desc { color: var(--text); opacity: 0.85; margin-top: 0.25rem; }
  a { text-decoration: none; color: inherit; }
  a:hover { text-decoration: underline; }
</style>

<li class="post">
  <a href={url}>
    <div class="title">{title}</div>
    {(pubDate || description) && (
      <div class="meta"><DateText value={pubDate} /></div>
    )}
    {description && <div class="desc">{description}</div>}
  </a>
</li>
